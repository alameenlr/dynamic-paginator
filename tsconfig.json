{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015","DOM"],
    "module": "ES2015",
    "rootDir": "./src",
    "declaration": true,
    // "sourceMap": true, /* Enable it in Development*/
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
